<article class="card">
  <div class="card-header flex-row justify-space-between">
    <h2>
    <a href="{{post_url}}" target="_blank">{{title}}</a>
    <span>({{format_url post_url}})</span>
    </h2>
    <div>
       {{vote_count}} {{format_plural "Upvote" vote_count}}. Posted by {{user.username}} on {{format_date created_at}}
    </div>
  </div>
  <div class="card-body">
    {{body_text}}
  </div>
  <div class="meta">
    <a href="/post/{{id}}">Click Here to Add to the {{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>